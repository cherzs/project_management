<odoo>
    <!-- Form view for Projects -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.management.form</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Tasks">
                            <field name="task_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for Projects -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">project.management.tree</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- Kanban view for Projects -->
    <record id="view_project_management_kanban" model="ir.ui.view">
        <field name="name">project.management.kanban</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_project_kanban_card">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="user_id"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_text_content">
                                    <field name="description" widget="text_truncate" options="{'length': 50}"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'ongoing': 'primary', 'completed': 'success', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
</odoo>
