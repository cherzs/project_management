<odoo>
    <!-- Form view for Projects -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.management.form</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Tasks">
                            <field name="task_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for Projects -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">project.management.tree</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- Kanban view for Projects -->
    <record id="view_project_management_kanban" model="ir.ui.view">
        <field name="name">project.management.kanban</field>
        <field name="model">project.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" 
                    class="o_kanban_small_column" 
                    records_draggable="true"
                    on_create="quick_create"
                    group_create="true"
                    group_delete="true"
                    group_edit="true"
                    sample="1">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="description"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <progressbar field="state" colors='{"draft": "muted", "ongoing": "warning", "completed": "success"}'/>
                <field name="display_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title mb-2">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle mb-2">
                                    <field name="user_id"/>
                                </div>
                                <div class="o_kanban_record_body mb-2">
                                    <div class="o_kanban_text_content">
                                        <field name="description" widget="text_truncate" options="{'length': 50}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date_start" widget="date"/>
                                        <field name="date_end" widget="remaining_days"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options='{"classes": {
                                            "draft": "secondary",
                                            "ongoing": "warning",
                                            "completed": "success",
                                            "cancelled": "danger"
                                        }}'/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
</odoo>
