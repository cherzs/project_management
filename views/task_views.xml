<odoo>
    <!-- Kanban view for Project Tasks -->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">projects.task.kanban</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="time_group" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <field name="date_deadline"/>
                <field name="priority"/>
                <field name="color"/>
                <field name="tag_ids"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_project_kanban_card {{record.priority.raw_value == '2' ? 'oe_kanban_color_red' : ''}}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="project_id"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <div class="o_kanban_text_content">
                                    <t t-esc="record.description.value[:50] + (record.description.value and len(record.description.value) > 50 and '...' or '')"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="date_deadline" widget="remaining_days"/>
                                    <field name="state" widget="label_selection" options="{'classes': {'new': 'default', 'in_progress': 'primary', 'done': 'success', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form view for Project Tasks -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">projects.task.form</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="assigned_user_id"/>
                        <field name="date_deadline"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for Project Tasks -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">projects.task.tree</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="date_deadline"/>
                <field name="state"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <!-- Search view for Project Tasks -->
    <record id="view_task_search" model="ir.ui.view">
        <field name="name">projects.task.search</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <filter string="My Tasks" name="my_tasks" domain="[('assigned_user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Assigned To" name="group_by_assigned" context="{'group_by': 'assigned_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Tasks -->
    <record id="action_project_tasks" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">projects.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_tasks': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new task
            </p>
        </field>
    </record>
</odoo>
