<odoo>
    <!-- Kanban view for Project Tasks -->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">projects.task.kanban</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="date_deadline">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record {{ record.priority }}">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="project_id"/></div>
                                <div><field name="assigned_user_id"/></div>
                                <div><field name="state"/></div>
                                <div><field name="date_deadline"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
                <!-- Defining the group headers based on task due date -->
                <group name="Today" string="Today" domain="[('date_deadline', '=', (context_today()))]"/>
                <group name="This Week" string="This Week" domain="[('date_deadline', '&gt;=', context_today()), ('date_deadline', '&lt;=', (context_today() + timedelta(days=(6 - context_today().weekday()))))]"/>
                <group name="This Month" string="This Month" domain="[('date_deadline', '&gt;=', context_today()), ('date_deadline', '&lt;=', (context_today() + relativedelta(day=31)))]"/>
                <group name="Later" string="Later" domain="[('date_deadline', '&gt;', (context_today() + relativedelta(day=31)))]"/>
            </kanban>
        </field>
    </record>

    <!-- Tree view for Project Tasks -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">projects.task.tree</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="date_deadline"/>
                <field name="priority"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Project Tasks -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">projects.task.form</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="assigned_user_id"/>
                        <field name="description"/>
                        <field name="date_deadline"/>
                        <field name="priority"/>
                        <field name="state"/>
                        <field name="tag_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the task kanban view -->
    <record id="action_project_task_kanban" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">projects.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_task_kanban"/>
    </record>
</odoo>
