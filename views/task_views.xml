<odoo>
    <!-- Form view for Project Tasks -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">projects.task.form</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="assigned_user_id"/>
                        <field name="date_deadline"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for Project Tasks -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">projects.task.tree</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="date_deadline"/>
                <field name="state"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <!-- Search view for Project Tasks -->
    <record id="view_task_search" model="ir.ui.view">
        <field name="name">projects.task.search</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <filter string="My Tasks" name="my_tasks" domain="[('assigned_user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Personal Stage" name="group_by_personal_stage" context="{'group_by': 'personal_stage_id'}"/>
                    <filter string="Assigned To" name="group_by_assigned" context="{'group_by': 'assigned_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Tasks -->
    

    <!-- Kanban view for Project Tasks -->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">projects.task.kanban</field>
        <field name="model">projects.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" 
                    class="o_kanban_small_column" 
                    records_draggable="true"
                    on_create="quick_create"
                    group_create="true"
                    group_delete="true"
                    group_edit="true"
                    sample="1">
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="date_deadline"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="tag_ids"/>
                <field name="personal_stage_id"/>
                <field name="display_name"/>
                <progressbar field="state" colors='{"draft": "muted", "in_progress": "warning", "done": "success"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title mb-2">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle mb-2">
                                    <field name="project_id"/>
                                    <field name="priority" widget="priority" class="float-end"/>
                                </div>
                                <div class="o_kanban_record_body mb-2">
                                    <div class="o_kanban_tags_section mb-2">
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                        <field name="date_deadline" widget="remaining_days"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options='{"classes": {
                                            "draft": "secondary",
                                            "in_progress": "warning",
                                            "done": "success",
                                            "cancelled": "danger"
                                        }}'/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
